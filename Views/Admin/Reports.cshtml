    <script>
// ========== GLOBAL VARIABLES ==========
let revenueChart = null;
let ordersChart = null;
let currentPeriod = 'today';

// ========== DROPDOWN MENU ==========
const userMenuBtn = document.getElementById('userMenuBtn');
const dropdownMenu = document.getElementById('dropdownMenu');
const dropdownIcon = document.getElementById('dropdownIcon');

userMenuBtn.addEventListener('click', (e) => {
    e.preventDefault();
    e.stopPropagation();
    dropdownMenu.classList.toggle('show');
    dropdownIcon.classList.toggle('fa-chevron-down');
    dropdownIcon.classList.toggle('fa-chevron-up');
});

document.addEventListener('click', (e) => {
    if (!userMenuBtn.contains(e.target) && !dropdownMenu.contains(e.target)) {
        dropdownMenu.classList.remove('show');
        dropdownIcon.classList.remove('fa-chevron-up');
        dropdownIcon.classList.add('fa-chevron-down');
    }
});

// ========== FILTER BY PERIOD ==========
function filterByPeriod(period) {
    currentPeriod = period;
    
    // Update active button
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.classList.remove('active');
    });
    event.target.closest('.filter-btn').classList.add('active');
    
    // Load data
    loadReportData(period);
}

// ========== LOAD REPORT DATA ==========
async function loadReportData(period) {
    try {
        console.log('📊 Loading report data for period:', period);
        
        const response = await fetch(`/Admin/api/reports?period=${period}`);
        const data = await response.json();
        
        console.log('📥 Received data:', data);
        
        if (data.success) {
            updateSummaryStats(data);
            updateCharts(data);
            updateTable(data);
        } else {
            showNotification('Không thể tải dữ liệu báo cáo!', 'error');
        }
    } catch (error) {
        console.error('❌ Error loading report data:', error);
        showNotification('Lỗi kết nối! Vui lòng thử lại.', 'error');
    }
}

// ========== UPDATE SUMMARY STATS ==========
function updateSummaryStats(data) {
    document.getElementById('totalRevenue').textContent = 
        (data.totalRevenue || 0).toLocaleString('vi-VN') + ' đ';
    
    document.getElementById('totalOrders').textContent = 
        data.totalOrders || 0;
    
    document.getElementById('avgOrderValue').textContent = 
        (data.avgOrderValue || 0).toLocaleString('vi-VN') + ' đ';
    
    document.getElementById('successRate').textContent = 
        (data.successRate || 0).toFixed(1) + '%';
    
    // Update growth percentages
    document.getElementById('revenueGrowth').textContent = 
        (data.revenueGrowth >= 0 ? '+' : '') + (data.revenueGrowth || 0).toFixed(1) + '%';
    
    document.getElementById('ordersGrowth').textContent = 
        (data.ordersGrowth >= 0 ? '+' : '') + (data.ordersGrowth || 0).toFixed(1) + '%';
    
    document.getElementById('avgGrowth').textContent = 
        (data.avgGrowth >= 0 ? '+' : '') + (data.avgGrowth || 0).toFixed(1) + '%';
    
    document.getElementById('successGrowth').textContent = 
        (data.successGrowth >= 0 ? '+' : '') + (data.successGrowth || 0).toFixed(1) + '%';
}

// ========== UPDATE CHARTS ==========
function updateCharts(data) {
    const labels = data.chartData?.labels || [];
    const revenues = data.chartData?.revenues || [];
    const orders = data.chartData?.orders || [];
    
    // Destroy existing charts
    if (revenueChart) revenueChart.destroy();
    if (ordersChart) ordersChart.destroy();
    
    // Revenue Chart
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    revenueChart = new Chart(revenueCtx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Doanh thu (đ)',
                data: revenues,
                borderColor: 'rgb(16, 185, 129)',
                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                tension: 0.4,
                fill: true,
